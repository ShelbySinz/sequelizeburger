<div class = "container">

 
    
    <hr>  
      <h2>Welcome to Build a burger</h2>

        <div class= "row">
       <div class = "col-md-4 .offset-4">
     <div class="card">
  <div class="card-body">
<h2>Create Your Burger!</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button class = "btn btn-primary"type="submit">Cook that Burger!</button>
</form>
</div>
</div>
 </div>
  </div>

  <hr>
<div class =" row">
    <div class = "col-md-6">
        <div class="card">
  <div class="card-body">
    <h2>Freshly made burgers!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    
      <ul>
      <li> {{BurgerName}}
        <br>
        <label for = "cu">Customer Name:</label>
        <input type = "text" id = "cu" name= "cusName"   data-customer = "{{id}}"   >
	<button class="change btn btn-md btn-warning" data-id="{{id}}" type="submit"  >
		Eat it?
	</button>
  </li>
         </ul>
        
      {{!-- {{> burgers/burger-block newDevoured=true}} --}}
    {{/unless}}
  {{/each}}
</ul>
  </div>
</div>
     </div>

       <div class = "col-md-6">
        <div class="card">
  <div class="card-body">
    <h2>Burgers ate!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
    
<ul>
   <li> {{BurgerName}}
   <p> eaten by:  {{Customer.CustomerName}} </p>

    <button class= "delete btn btn-sm btn-primary delete-burger" data-id= "{{this.id}}">Delete</button>
     </li>
      {{!-- {{> burgers/burger-block newDevoured=false}} --}}
     </ul>
     
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>
     </div>
</div>
<hr>
     </div>
     